@model WebEjemplo3.Models.User
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.bundle.js"></script>
<div class="container">
    <div class="mt-4 p-5 bg-secondary text-white rounded text-center">
        <h1>CRUD EN ASP.NET MVC 5</h1>
    </div>
    <div class="row justify-content-md-center">
        <div class="col-md-4">
            <br />
            <div class="card">
                <div class="card-header text-center">
                    <b>INICIAR SESIÓN</b>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            @*@Html.LabelFor(m => m.correo)*@
                            <label for="correo" class="form-label">Correo:</label>
                            @Html.TextBoxFor(m => m.correo, "", new { @class = "form-control", @placeholder = "Ingresa tu correo" })

                        </div>
                        <div class="form-group">
                            @*@Html.LabelFor(m => m.contraseña)*@
                            <label for="contraseña" class="form-label">Contraseña:</label>
                            @Html.PasswordFor(m => m.contraseña, new { @class = "form-control", @placeholder = "Ingresa tu contraseña" })
                        </div>
                        <br />
                        <div class="d-grid">
                            <input type="submit" name="submit" class="btn btn-primary btn-block " value="Login" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>